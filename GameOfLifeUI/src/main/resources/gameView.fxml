<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane fx:id="cellsContainer" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.gameoflifeui.GameController">
   <children>
      <!-- Pane for dynamic content -->
      <Pane fx:id="dynamicContentPane" layoutY="0.0" prefHeight="276.0" prefWidth="600.0" />

      <!-- Pane for static content -->
      <Pane layoutY="276.0" prefHeight="124.0" prefWidth="600.0">
         <children>
            <Button fx:id="pauseGameButton" layoutX="150.0" layoutY="50.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="88.0" text="Pause" onAction="#pauseGame" />
            <Button fx:id="startGameButton" layoutX="250.0" layoutY="50.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="88.0" text="Start" onAction="#startGame" />
            <Button fx:id="closeGameButton" layoutX="350.0" layoutY="50.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="88.0" text="Close" onAction="#closeGame" />
            <Button fx:id="saveGameButton"  layoutX="450.0" layoutY="50.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="88.0" text="Save" onAction="#saveGame" />
         </children>
      </Pane>
   </children>
</Pane>
